<Window x:Class="Bakery.WpfApplication.AdminDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bakery.WpfApplication"
        mc:Ignorable="d"
        Title="Admin Dashboard" 
        Height="600" 
        Width="1400"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="32" VerticalAlignment="Top" Width="1400">
            <StackPanel.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FF0099FF" Offset="0"/>
                    <GradientStop Color="#EC136D" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBlock Height="29" Text="Admin Dashboard" Width="156" 
               HorizontalAlignment="Left" Margin="0,4,0,0"
               FontSize="18" FontWeight="Bold" Foreground="White"/>
            <TextBlock  x:Name="AdminName"
                    Height="29"
                    FontSize="18" 
                    FontWeight="Light" 
                    Foreground="White"
                    Margin="500 0 0 0 "/>

        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="600" Margin="1,32,0,0" VerticalAlignment="Top" Width="150" Background="#FF717578">

            <Button x:Name="btnHome" Height="44" Width="145" Margin="0,30,0,0" Background="Transparent" BorderBrush="Transparent" Click="btnHome_OnClick">
                <StackPanel Orientation="Horizontal" Height="44" Width="145">
                    <Image Source="/Images/home.png" Width="44" Height="40" Stretch="Uniform" VerticalAlignment="Center"/>
                    <TextBlock Text="Home" VerticalAlignment="Bottom" Margin="5,0,0,0" Foreground="White" FontSize="18" Width="95" FontWeight="DemiBold" />
                </StackPanel>
            </Button>

            <Border x:Name="SubMenuContainer"
            Background="Transparent"
            Height="0"
            ClipToBounds="True">
                <StackPanel x:Name="SubMenu" Visibility="Visible">
            <Button x:Name="btnCustomer" Height="44" Width="145" Margin="0,10,0,0" Background="Transparent" BorderBrush="Transparent" Click="btnUser_Click">
                <StackPanel Orientation="Horizontal" Height="44" Width="145">
                    <Image Source="/Images/use.png" Width="44" Height="40" Stretch="Uniform" VerticalAlignment="Center"/>
                    <TextBlock Text="Users" VerticalAlignment="Bottom" Margin="5,0,0,0" Foreground="White" FontSize="18" Width="95" FontWeight="DemiBold" />
                </StackPanel>
            </Button>

            <Button x:Name="btnRoom" Height="44" Width="145" Margin="0,10,0,0" Background="Transparent" BorderBrush="Transparent" Click="btnBakery_Click">
                <StackPanel Orientation="Horizontal" Height="44" Width="145">
                    <Image Source="/Images/product.png" Width="44" Height="40" Stretch="Uniform" VerticalAlignment="Center"/>
                    <TextBlock Text="Bakery" VerticalAlignment="Bottom" Margin="5,0,0,0" Foreground="White" FontSize="18" Width="95" FontWeight="DemiBold" />
                </StackPanel>
            </Button>

            <Button x:Name="btnOrder" Height="44" Width="145" Margin="0,10,0,0" Background="Transparent" BorderBrush="Transparent" Click="btnOrder_Click">
                <StackPanel Orientation="Horizontal" Height="44" Width="145">
                    <Image Source="/Images/order.png" Width="44" Height="40" Stretch="Uniform" VerticalAlignment="Center"/>
                    <TextBlock Text="Order" VerticalAlignment="Bottom" Margin="5,0,0,0" Foreground="White" FontSize="18" Width="95" FontWeight="DemiBold" />
                </StackPanel>
            </Button>

            <Button x:Name="btnLogOut" Height="44" Width="145" Margin="0,10,0,0" Background="Transparent" BorderBrush="Transparent" Click="btnLogOut_Click">
                <StackPanel Orientation="Horizontal" Height="44" Width="145">
                    <Image Source="/Images/logout.png" Width="44" Height="40" Stretch="Uniform" VerticalAlignment="Center"/>
                    <TextBlock Text="Logout" VerticalAlignment="Bottom" Margin="5,0,0,0" Foreground="White" FontSize="18" Width="95" FontWeight="DemiBold" Height="29" />
                </StackPanel>
            </Button>
            </StackPanel>

            </Border>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="31" Margin="150,32,0,0" VerticalAlignment="Top" Width="1400">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF4B4444" Offset="1"/>
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="White" Offset="0.594"/>
                    <GradientStop Color="White" Offset="0.77"/>
                    <GradientStop Color="White" Offset="0.924"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBlock Height="29" Text="Dashboard" Width="89"
   HorizontalAlignment="Left"
   FontSize="16" FontWeight="Bold" Foreground="Black"/>
        </StackPanel>

        <ContentControl x:Name="ContentArea" HorizontalAlignment="Right" 
                    Margin="0,70,-1,0" 
                    VerticalAlignment="Top" Width="1250" Height="510" />


    </Grid>
</Window>
