<UserControl x:Class="Bakery.WpfApplication.View.BakeryManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bakery.WpfApplication.View"
        mc:Ignorable="d"
        Height="416" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <!-- Fish/Koi DataGrid -->
        <DataGrid x:Name="dgData" Grid.Row="0" ItemsSource="{Binding bakeryList}"
                  AutoGenerateColumns="False" IsReadOnly="False"
                  
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="50" IsReadOnly="True" />
                <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="100" />
                <DataGridTemplateColumn Header="Image" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageURL}" Width="100" Height="100" Stretch="Uniform" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- <DataGridTextColumn Header="Quantity" Binding="{Binding KoiFishQuantity}" Width="70" /> -->
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="100" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="70" />
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="100" />
                <DataGridTextColumn Header="CreatedAt" Binding="{Binding CreatedAt}" Width="100" />
                <DataGridTextColumn Header="Category" Binding="{Binding Category.CategoryName}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form for adding or editing fish -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="50,5,50,0">
            <Button Content="Add Koi" Width="155" Margin="5" >
                <Button.Background>
                    <SolidColorBrush Color="#0099FF" />
                </Button.Background>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#28AEED" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#0099FF" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Content="Update Koi" Width="155" Margin="5" >
                <Button.Background>
                    <SolidColorBrush Color="#FF1B7140" />
                </Button.Background>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#28AEED" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#0099FF" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Content="Delete Koi" Width="155" Margin="5" Padding="5" >
                <Button.Background>
                    <SolidColorBrush Color="#FFA2AA3D" />
                </Button.Background>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#28AEED" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#0099FF" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <StackPanel Height="44" Width="356" Margin="20,0,0,0" Orientation="Horizontal">
                <Button x:Name="btnSearch" Height="46" Width="46"
                        Background="Transparent" BorderBrush="Transparent"
                        HorizontalAlignment="Left" >
                    <StackPanel Orientation="Horizontal" Height="39" Width="151" RenderTransformOrigin="0.13,0.472">
                        <Image Source="/Images/search.png" Width="44" Height="40" Stretch="Uniform"
                               VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Grid Width="260" Height="46">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtSearch"
                             FontSize="20"
                             FontWeight="Medium"
                             FontFamily="Helvetica"
                             Height="40"
                             VerticalContentAlignment="Center"
                             Width="220"
                             Background="Transparent"
                             BorderBrush="Black"
                             HorizontalAlignment="Center"
                             GotFocus="txtSearch_GotFocus"
                             LostFocus="txtSearch_LostFocus" Margin="0,3,0,3">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="20">
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock x:Name="txtPlaceholder" Text="Enter name"
                               Foreground="White"
                               FontSize="15"
                               FontWeight="Medium"
                               FontFamily="Helvetica"
                               VerticalAlignment="Center"
                               Margin="10,0,8,0"
                               IsHitTestVisible="False" />

                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- Adding/Editing form          -->

        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="38" VerticalAlignment="Top">
            <TextBox x:Name="BakeryId" Width="40" Margin="5" IsEnabled="False" />
            <TextBox x:Name="BakeryName" Width="100" Margin="5" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="Image" Width="110" Margin="5" IsReadOnly="True" />
                <Button Content="Browse" Width="75" Margin="5" />
            </StackPanel>
            <TextBox x:Name="Description" Width="100" Margin="5" />
            <TextBox x:Name="Price" Width="70" Margin="5" />
            <TextBox x:Name="Stock" Width="100" Margin="5" />
            <TextBox x:Name="CreatedAt" Width="100" Margin="5" />
            <ComboBox x:Name="cboCategory" Width="100" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>
