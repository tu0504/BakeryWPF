<UserControl x:Class="Bakery.WpfApplication.View.BakeryManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bakery.WpfApplication.View"

        mc:Ignorable="d"
        Height="450" Width="1240" Loaded="UserControl_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="11*"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>


        <DataGrid x:Name="dgData" Grid.Row="0" ItemsSource="{Binding bakeryList}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionChanged="dgData_SelectionChanged"
                    PreviewMouseLeftButtonDown="dgData_PreviewMouseLeftButtonDown"
                  CanUserAddRows="False" Grid.RowSpan="2" Margin="27,0,-27,0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="50" />
                <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="100" />

                <DataGridTemplateColumn Header="Image" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image  Source="{Binding ImageUrl}" Width="100" Height="100" Stretch="Uniform" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="70" />
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="100" />
                <DataGridTextColumn Header="CreatedAt" Binding="{Binding CreatedAt}" Width="100" />
                <DataGridTextColumn Header="Category" Binding="{Binding Category.CategoryName}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="50,5,50,0">
            <Button x:Name="CreateButton" Content="Add bakery" Width="155" Margin="5" Click="CreateButton_Click" >
                <Button.Background>
                    <SolidColorBrush Color="#0099FF" />
                </Button.Background>

                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#28AEED" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#0099FF" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>

                </Button.Triggers>
            </Button>
            <Button x:Name="UpdateButton" Content="Update bakery" Width="155" Margin="5" IsEnabled="False" Click="UpdateButton_Click" >
                <Button.Background>
                    <SolidColorBrush Color="#FF1B7140" />
                </Button.Background>

                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#28AEED" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#0099FF" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button x:Name="DeleteButton" Content="Delete bakery" Width="155" Margin="5" Padding="5" IsEnabled="False" Click="DeleteButton_Click" >
                <Button.Background>
                    <SolidColorBrush Color="#FFA2AA3D" />
                </Button.Background>

                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#28AEED" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="#0099FF" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <StackPanel Height="44" Width="356" Margin="20,0,0,0" Orientation="Horizontal">
                <Button x:Name="btnSearch" Height="46" Width="46"
                        Background="Transparent" BorderBrush="Transparent"
                        HorizontalAlignment="Left" Click="btnSearch_Click" >
                    <StackPanel Orientation="Horizontal" Height="39" Width="151" RenderTransformOrigin="0.13,0.472">
                        <Image Source="/Images/search.png" Width="44" Height="40" Stretch="Uniform"
                               VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Grid Width="260" Height="46">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="13*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtSearch"
                             FontSize="20"
                             FontWeight="Medium"
                             FontFamily="Helvetica"
                             Height="40"
                             VerticalContentAlignment="Center"
                             Width="220"
                             Background="Transparent"
                             BorderBrush="Black"
                             HorizontalAlignment="Center"
                             GotFocus="txtSearch_GotFocus"
                             LostFocus="txtSearch_LostFocus" Margin="0,3,0,3" Grid.RowSpan="2">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="20">
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock x:Name="txtPlaceholder" Text="Enter name"
                               Foreground="White"
                               FontSize="15"
                               FontWeight="Medium"
                               FontFamily="Helvetica"
                               VerticalAlignment="Top"
                               Margin="10,14,8,0"
                               IsHitTestVisible="False" Grid.RowSpan="2" />

                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- Adding/Editing form          -->

        <StackPanel Grid.Row="2" Orientation="Horizontal" Height="38" VerticalAlignment="Top" Margin="27,0,-27,0">
            <TextBox x:Name="BakeryId" Width="40" Margin="5" IsEnabled="False" />
            <TextBox x:Name="BakeryName" Width="100" Margin="5" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="Image" Width="110" Margin="5" IsReadOnly="True" />
                <Button x:Name="BrowseButton" Content="Browse" Width="75" Margin="5" Click="BrowseButton_Click"  />
            </StackPanel>
            <TextBox x:Name="Description" Width="100" Margin="5" />
            <TextBox x:Name="Price" Width="70" Margin="5" />
            <TextBox x:Name="Stock" Width="100" Margin="5" />
            <TextBox x:Name="CreatedAt" Width="100" Margin="5" IsReadOnly="True"/>
            <ComboBox x:Name="cboCategory"
              Width="150"
              DisplayMemberPath="CategoryName"
              SelectedValuePath="CategoryId"
              SelectionChanged="cboCategory_SelectionChanged"
              Margin="5,0"/>
        </StackPanel>
    </Grid>
</UserControl>
