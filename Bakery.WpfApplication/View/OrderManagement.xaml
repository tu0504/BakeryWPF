<UserControl x:Class="Bakery.WpfApplication.View.OrderManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Bakery.WpfApplication.View"
    mc:Ignorable="d"
    d:DesignHeight="520" d:DesignWidth="1240">

            <DockPanel>
                <!-- Admin-style inner header -->
                <StackPanel DockPanel.Dock="Top" Height="36" HorizontalAlignment="Stretch">
                    <StackPanel.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF0099FF" Offset="0"/>
                            <GradientStop Color="#EC136D" Offset="1"/>
                        </LinearGradientBrush>
                    </StackPanel.Background>
                    <Grid Height="36">
                        <TextBlock Text="Order Management" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>
                </StackPanel>

                <!-- Content area: mimic Admin ContentArea styling -->
                <Border DockPanel.Dock="Top" Margin="8" Padding="8" Background="WhiteSmoke" CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="280" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Top info row -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBox x:Name="txtOrderId" Width="80" Margin="2" IsReadOnly="True" />
                            <TextBox x:Name="txtDate" Width="160" Margin="2" IsReadOnly="True" />
                            <TextBox x:Name="txtTotalMoney" Width="120" Margin="2" IsReadOnly="True" />
                            <ComboBox x:Name="cboUser" Width="180" Margin="2" IsHitTestVisible="False" Focusable="False" />
                            <TextBox x:Name="txtStatus" Width="140" Margin="2" IsReadOnly="True" />
                        </StackPanel>

                        <!-- Main lists -->
                        <Grid Grid.Row="1" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <DataGrid x:Name="dgData" Grid.Row="0" AutoGenerateColumns="False" Margin="0,0,0,8" IsReadOnly="True" CanUserAddRows="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Order Id" Binding="{Binding OrderId}" Width="80" />
                                    <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" Width="160" />
                                    <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount}" Width="100" />
                                    <DataGridTextColumn Header="User" Binding="{Binding User.UserName}" Width="120" />
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <DataGrid x:Name="dgDetails" Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" CanUserAddRows="False">
                                <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" Binding="{Binding Product.ProductName}" Width="*" />
                        </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                        <!-- Right-side actions panel -->
                        <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Actions" FontWeight="Bold" Margin="0,0,0,6" />
                            <Button x:Name="btnDeleteOrder" Content="Delete Order" Width="240" Margin="0,4,0,0" IsEnabled="False" Click="btnDeleteOrder_Click" Height="28">
                                <Button.Background>
                                    <SolidColorBrush Color="#FFA2AA3D" />
                                </Button.Background>
                            </Button>
                            <Button x:Name="btnDeleteOrderDetail" Content="Delete Order Detail" Width="240" Margin="0,8,0,0" IsEnabled="False" Click="btnDeleteOrderDetail_Click" Height="33">
                                <Button.Background>
                                    <SolidColorBrush Color="#FF1B7140" />
                                </Button.Background>
                            </Button>

                            <Separator Margin="0,12,0,12" />
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Detail" FontWeight="SemiBold" />
                                <ComboBox x:Name="cboKoi" Width="240" Margin="0,6,0,0" IsHitTestVisible="False" Focusable="False" />
                                <TextBox x:Name="txtQuantity" Width="240" Margin="0,6,0,0" IsReadOnly="True" />
                                <TextBox x:Name="txtPrice" Width="240" Margin="0,6,0,0" IsReadOnly="True" />
                            </StackPanel>
                        </StackPanel>

                    </Grid>
                </Border>

            </DockPanel>

        </UserControl>
