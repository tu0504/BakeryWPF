<UserControl x:Class="Bakery.WpfApplication.View.UserManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bakery.WpfApplication.View"
        mc:Ignorable="d" Height="500" Width="1241" Loaded="UserControl_Loaded" >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- User DataGrid -->
        <DataGrid x:Name="dgData"
              Grid.Row="0"
              AutoGenerateColumns="False"
              IsReadOnly="False"
              
              CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="User ID" Binding="{Binding UserId}" Width="60" IsReadOnly="True" />
                <DataGridTextColumn Header="Username" Binding="{Binding UserName}" Width="120" />
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150" />
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="120" />
                <DataGridTextColumn Header="Phone Number" Binding="{Binding Phone}" Width="130" />
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="130" />
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" />
                <DataGridTemplateColumn Header="Action" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit" 
                            Click="btnEdit_Click"
                            Foreground="Black"
                                    FontWeight="Bold"
                            />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form for adding or editing users -->
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                Height="38"
                VerticalAlignment="Top">
            <Grid Width="40" Margin="5">

                <TextBlock Text="ID" 
                   VerticalAlignment="Center" 
                   Foreground="#888" 
                   IsHitTestVisible="False"
                   Background="White" Height="28"/>
                <TextBox x:Name="txtUserId"
                   Background="Transparent"
                   VerticalContentAlignment="Center"
                   IsEnabled="False" 
                   GotFocus="txtInput_GotFocus" 
                   LostFocus="txtInput_LostFocus"/>

            </Grid>

            <Grid Width="85" Margin="5">
                <TextBlock Text="User Name" 
                VerticalAlignment="Center" 
                Foreground="#888" 
                IsHitTestVisible="False"
                Background="White" Height="28"/>
                <TextBox x:Name="txtUserName"
                Background="Transparent"
                VerticalContentAlignment="Center"
                GotFocus="txtInput_GotFocus" 
                LostFocus="txtInput_LostFocus"
                />
            </Grid>

            <Grid Width="120" Margin="5">
                <TextBlock Text="Full Name" 
                VerticalAlignment="Center" 
                Foreground="#888" 
                IsHitTestVisible="False"
                Background="White" Height="28"/>
                <TextBox x:Name="txtFullName"
                Background="Transparent"
                VerticalContentAlignment="Center"
                GotFocus="txtInput_GotFocus" 
                LostFocus="txtInput_LostFocus"
                />
            </Grid>

            <Grid Width="140" Margin="5">
                <TextBlock Text="Email" 
                VerticalAlignment="Center" 
                Foreground="#888" 
                IsHitTestVisible="False"
                Background="White" Height="28"/>
                <TextBox x:Name="txtEmail"
                Background="Transparent"
                VerticalContentAlignment="Center"
                GotFocus="txtInput_GotFocus" 
                LostFocus="txtInput_LostFocus"
    />
            </Grid>
            <Grid Width="100" Margin="5">
                <TextBlock Text="Password" 
            VerticalAlignment="Center" 
            Foreground="#888" 
            IsHitTestVisible="False"
            Background="White" Height="28"/>
                <TextBox x:Name="txtPassword"
            Background="Transparent"
            VerticalContentAlignment="Center"
            GotFocus="txtInput_GotFocus" 
            LostFocus="txtInput_LostFocus"
/>
            </Grid>
            <Grid Width="50" Margin="5">
                <TextBlock Text="US / AD" 
            VerticalAlignment="Center" 
            Foreground="#888" 
            IsHitTestVisible="False"
            Background="White" Height="28"/>
                <TextBox x:Name="txtRole"
            Background="Transparent"
            VerticalContentAlignment="Center"
            GotFocus="txtInput_GotFocus" 
            LostFocus="txtInput_LostFocus"
/>
            </Grid>
            <Grid Width="90" Margin="5">
                <TextBlock Text="Address" 
            VerticalAlignment="Center" 
            Foreground="#888" 
            IsHitTestVisible="False"
            Background="White" Height="28"/>
                <TextBox x:Name="txtAddress"
            Background="Transparent"
            VerticalContentAlignment="Center"
            GotFocus="txtInput_GotFocus" 
            LostFocus="txtInput_LostFocus"
/>
            </Grid>
            <Grid Width="105" Margin="5">
                <TextBlock Text="Phone" 
            VerticalAlignment="Center" 
            Foreground="#888" 
            IsHitTestVisible="False"
            Background="White" Height="28"/>
                <TextBox x:Name="txtPhone"
            Background="Transparent"
            VerticalContentAlignment="Center"
            GotFocus="txtInput_GotFocus" 
            LostFocus="txtInput_LostFocus"
/>
            </Grid>






            <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                <RadioButton x:Name="rbStatusActive" Content="Active" GroupName="StatusGroup" Margin="5"
                         />
                <RadioButton x:Name="rbStatusInactive" Content="Inactive" GroupName="StatusGroup" Margin="5"
                         />
            </StackPanel>

        </StackPanel>
        <!-- Add and Delete Buttons -->

        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                Margin="0,5,10,5">

            <Button Content="Create User"
                Width="160"
                Margin="5"
                Click="btnCreateUser">
                <Button.Background>
                    <SolidColorBrush Color="#0099FF" />
                </Button.Background>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#28AEED" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#0099FF" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Content="Update User"
                Width="160"
                Margin="5"
                Click="btnUpdateUser">
                <Button.Background>
                    <SolidColorBrush Color="#FF1B7140" />
                </Button.Background>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#28AEED" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#0099FF" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Content="Delete User"
                Width="160"
                Margin="5"
                Click="btnDeleteUser">
                <Button.Background>
                    <SolidColorBrush Color="#FFA2AA3D" />
                </Button.Background>
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#28AEED" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="#0099FF" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <StackPanel Height="44" Width="238" Margin="20,0,0,0" Orientation="Horizontal">
                <Button x:Name="btnSearch" Height="46" Width="46"
                    Background="Transparent" BorderBrush="Transparent"
                    HorizontalAlignment="Left" Click="btnSearch_Click">
                    <StackPanel Orientation="Horizontal" Height="39" Width="151" RenderTransformOrigin="0.13,0.472">
                        <Image Source="/Images/search.png" Width="44" Height="40" Stretch="Uniform"
                           VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Grid Width="250" Height="46">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtSearch"
                         FontSize="16"
                         FontWeight="Medium"
                         FontFamily="Helvetica"
                         Height="40"
                         VerticalContentAlignment="Center"
                         Width="250"
                         Background="Transparent"
                         BorderBrush="Black"
                         HorizontalAlignment="Center"
                         GotFocus="txtSearch_GotFocus"
                         LostFocus="txtSearch_LostFocus" Margin="0,3,0,3">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="20" Margin="0,0,58,0">
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock x:Name="txtPlaceholder" 
                           FontSize="15"
                           FontWeight="Medium"
                           FontFamily="Helvetica"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="18,0,0,0"
                           IsHitTestVisible="False" />
                </Grid>
            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>